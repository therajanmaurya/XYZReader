<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--suppress AndroidLintContentDescription -->
        <com.opensource.xyz.reader.util.DynamicHeightNetworkImageView
            android:id="@+id/thumbnail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/photo_placeholder"/>

        <TextView
            android:id="@+id/article_title"
            style="@style/TextAppearance.AppCompat.Subhead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="4"
            android:paddingBottom="@dimen/list_item_textview_padding_bottom"
            android:paddingLeft="@dimen/list_item_textview_padding"
            android:paddingRight="@dimen/list_item_textview_padding"
            android:paddingTop="@dimen/list_item_textview_padding"/>

        <TextView
            android:id="@+id/article_subtitle"
            style="@style/TextAppearance.AppCompat.Body1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingBottom="@dimen/list_item_textview_padding"
            android:paddingLeft="@dimen/list_item_textview_padding"
            android:paddingRight="@dimen/list_item_textview_padding"
            android:singleLine="true"
            android:textColor="#6000"/>
    </LinearLayout>

</android.support.v7.widget.CardView>